<Window  x:Class="TranSubroCommissions.Splashscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
         Background="#2962ff"
        Height="130" 
         
        Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="0" IsIndeterminate="True" />
        
        <TextBlock Grid.Row="1" Foreground="#FFF" VerticalAlignment="Center" Name="Message" HorizontalAlignment="Center"
                   >Connecting to Quickbooks...</TextBlock>
       
    </Grid>
</Window>